NODELIM [^" "\t\n]
%{
	/* Регулярное выражения (NODELIM) определяющее состав слов */
	int l, w, c;
	l = 0;
	w = 0;
	c = 0;
	/* Определение глобальных переменных для подсчета слов,
	строк и символов */
%}
%%
{NODELIM}+	{
				w++; // подсчет слов
				c += yyleng; // подсчет символов
			}
\n 	{
		l++; // подсчет строк
	}
.	{
		c++; // подсчет символов не вошедших в слово
	}
%%

void main()
{
	yylex();
}
int yywrap()
{
	printf("Lines - %d Words - %d Chars - %d\n", l, w, c);
	return 1;
}
